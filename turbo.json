{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {},
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {},
    "test:e2e": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^build"]
    }
  }
}
